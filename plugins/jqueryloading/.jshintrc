// See: http://jshint.com/docs/options/

{
  // Enforcing options
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": "nofunc",
  "noarg": true,
  "noempty": true,
  "nonbsp": true,
  "quotmark": true,
  "undef": true,
  "unused": true,
  "trailing": true,

  // Relaxing options
  "boss": true,
  "expr": true,
  "smarttabs": true,

  // Environments options
  "browser": true,
  "jquery": true,
  "node": true
}
